[include]
	path = ~/dotfiles/.config/delta/catppuccin.gitconfig
[core]
	pager = delta
[interactive]
	diffFilter = delta --color-only --features=interactive
[user]
	name = Sami Al-Dury
	email = git@aldury.com
	signingkey = ~/.ssh/id_ed25519.pub
[init]
	defaultBranch = main
[gpg]
	format = ssh
[commit]
	gpgsign = true
[delta]
	dark = true
	features = catppuccin-mocha
